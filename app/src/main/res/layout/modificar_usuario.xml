<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/latitudEditCliente"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="latitud" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/longitudEditCliente"
        android:visibility="gone"
        android:textColor="@color/black"
        android:text="longitud" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCompletar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="ACTUALIZAR INFORMACIÓN"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:id="@+id/tvNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo nombre"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/etNomMod"
                style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@drawable/caja_texto_circular"
                android:inputType="textPersonName|textCapWords"
                android:padding="5sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/tvEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nueva edad"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/etEdMod"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="120dp"
                    android:layout_height="33dp"
                    android:background="@drawable/caja_texto_circular"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="5sp"
                    android:layout_marginStart="75dp"
                    android:hint="Años"
                    android:textColor="@color/black"
                    android:textColorHint="#9F807E7E"
                    android:textSize="13sp" />

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/etMeMod"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="120dp"
                    android:layout_height="33dp"
                    android:background="@drawable/caja_texto_circular"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="5sp"
                    android:hint="Meses"
                    android:textColor="@color/black"
                    android:textColorHint="#9F807E7E"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fecha de nacimiento:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvFecMod"
                android:layout_width="200dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:background="@drawable/caja_texto_circular"
                android:clickable="true"
                android:inputType="date"
                android:maxLines="1"
                android:padding="12sp"
                android:textColor="@color/black"
                android:textColorHint="#9F807E7E"
                android:textSize="13sp" />

            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nueva dirección:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/etDirMod"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:background="@drawable/caja_texto_circular"
                android:inputType="textEmailAddress"
                android:padding="5sp"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/EditMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/caja_texto_circular"
                android:text="EDITAR DIRECCIÓN DESDE MAPS"
                android:textStyle="bold"
                app:backgroundTint="@color/bg_fingerprint" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Email (Opcional)"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/etEmMod"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:background="@drawable/caja_texto_circular"
                android:inputType="textEmailAddress"
                android:padding="5sp"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4CAF50">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnContMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:textStyle="bold"
                android:drawableEnd="@drawable/refresh"
                android:drawablePadding="5dp"
                android:layout_marginStart="100dp"
                android:text="ACTUALIZAR"
                app:backgroundTint="#348C37" />

            <ImageButton
                android:layout_width="35dp"
                android:id="@+id/btnRegMod"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/regresarflecha" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
</RelativeLayout>