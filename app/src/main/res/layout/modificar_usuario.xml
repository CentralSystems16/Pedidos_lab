<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvCompletar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Modificar datos del cliente"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:id="@+id/tvNombreCompleto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo nombre"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/etNomMod"
                style="@android:style/Widget.Holo.Light.AutoCompleteTextView"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:background="@drawable/caja_texto_circular"
                android:inputType="textPersonName|textCapWords"
                android:padding="5sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/tvEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nueva edad"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/etEdMod"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="120dp"
                    android:layout_height="33dp"
                    android:background="@drawable/caja_texto_circular"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="5sp"
                    android:layout_marginStart="75dp"
                    android:hint="Años"
                    android:textColor="@color/black"
                    android:textColorHint="#9F807E7E"
                    android:textSize="13sp" />

                <EditText
                    android:layout_gravity="center"
                    android:id="@+id/etMeMod"
                    style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                    android:layout_width="120dp"
                    android:layout_height="33dp"
                    android:background="@drawable/caja_texto_circular"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="5sp"
                    android:hint="Meses"
                    android:textColor="@color/black"
                    android:textColorHint="#9F807E7E"
                    android:textSize="13sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/tvSexo"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="@string/sexo"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_gravity="center"
                android:id="@+id/rgSeMod"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMasMod"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/black"
                    android:text="@string/rbMasculinoCliente"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/rbFemMod"
                    android:layout_width="126dp"
                    android:layout_height="wrap_content"
                    app:buttonTint="@color/black"
                    android:text="@string/rbFemeninoCliente"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RadioGroup>

            <TextView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Fecha de nacimiento:"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tvFecMod"
                android:layout_width="200dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:background="@drawable/caja_texto_circular"
                android:clickable="true"
                android:inputType="date"
                android:maxLines="1"
                android:padding="12sp"
                android:textColor="@color/black"
                android:textColorHint="#9F807E7E"
                android:textSize="13sp" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Email (Opcional)"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_gravity="center"
                android:id="@+id/etEmMod"
                style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:background="@drawable/caja_texto_circular"
                android:inputType="textEmailAddress"
                android:padding="5sp"
                android:textColor="@color/black" />

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/btnContMod"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_circular"
                android:padding="5sp"
                android:text="COMPLETAR MODIFICACIÓN"
                android:gravity="center"
                app:backgroundTint="#4CAF50" />

            <Button
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:id="@+id/btnRegMod"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_circular"
                android:padding="5sp"
                android:text="REGRESAR"
                android:gravity="center"
                app:backgroundTint="#607D8B" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>