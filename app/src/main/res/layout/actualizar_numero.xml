<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.laboratorio.pedidos_lab.back.ActualizarNumero">

    <TextView
        android:text="ACTUALIZAR NÚMERO"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/newNumber"
        android:layout_marginTop="20dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:hint="Nuevo número"
        android:textColor="@color/black"
        android:textColorHint="#9F807E7E"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:background="@drawable/caja_texto_circular"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnActualizarNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRMAR"
        android:background="@drawable/caja_texto_circular"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="#4CAF50"/>

</LinearLayout>